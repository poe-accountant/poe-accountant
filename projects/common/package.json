{
    "name": "@meepen/poe-common",
    "license": "MPL-2.0",
    "version": "2.0.2",
    "description": "Common schemas for the Path of Exile API",
    "keywords": [
        "poe",
        "pathofexile",
        "api",
        "schemas",
        "types"
    ],
    "scripts": {
        "pretest": "npm run build",
        "test": "vitest run",
        "prebuild": "yarn scrape",
        "build": "yarn tsc",
        "pretsc": "rimraf dist",
        "tsc": "tsc --project tsconfig.lib.json",
        "scrape": "tsx scrape-src/main.ts"
    },
    "devDependencies": {
        "@types/jsdom": "^21.1.7",
        "@types/node": "^22.0.0",
        "axios": "^1.10.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "jsdom": "^26.1.0",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
    },
    "type": "module",
    "files": [
        "src/**/*.d.ts",
        "dist/**/*.js",
        "dist/**/*.js.map",
        "dist/**/*.d.ts",
        "!dist/**/*.test.js",
        "!dist/**/*.test.js.map",
        "!dist/**/*.test.d.ts",
        "package.json"
    ],
    "exports": {
        ".": {
            "types": "./dist/src/poe.gen.d.ts",
            "import": "./dist/src/poe.gen.js",
            "require": "./dist/src/poe.gen.js"
        },
        "./stats": {
            "types": "./dist/src/stats.d.ts",
            "import": "./dist/src/stats.js",
            "require": "./dist/src/stats.js"
        }
    },
    "author": {
        "email": "meep@meepen.dev",
        "name": "Meepen",
        "url": "https://github.com/meepen"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/meepen/poe-common.git"
    },
    "peerDependencies": {
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "reflect-metadata": "^0.2.2"
    }
}
