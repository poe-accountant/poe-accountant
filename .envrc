# Set NIX_CONFIG to use local nix.conf for experimental features
export NIX_CONFIG="$(cat .nixos/nix.conf 2>/dev/null || echo 'experimental-features = nix-command flakes')"

# Project root directory
export PROJECT_ROOT="$(pwd)"

# Local kubeconfig for project-specific kubectl configuration
export KUBECONFIG="$PROJECT_ROOT/.kube/config"

use flake
